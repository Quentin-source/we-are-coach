{% extends 'backoffice/layout.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block content %}
    
    <h2>Edition d'une catégorie</h2>
    {{ form_start(formView, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_row(formView.name, {'attr': {'class':'geronimo'}}) }}
    {{ form_row(formView.description, {'attr': {'class':'geronimo'}}) }}
    <button class="btn btn-primary">Valider</button>
    {{ form_end(formView) }}

    <p>
        <a href="{{ path('backoffice_category_index') }}">Retour à la liste</a>
    </p>

    {% endblock %}