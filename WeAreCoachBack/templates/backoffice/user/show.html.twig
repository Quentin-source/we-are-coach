{% extends 'backoffice/layout.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block content %}
    <h1>{{ user_show.pseudo }}</h1>

        <table class="table">
        <tbody>
            <tr>
                <th>Photo</th>
                <td>{{ user_show.picture }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user_show.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user_show.lastname }}</td>
            </tr>
            <tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user_show.firstname }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user_show.pseudo }}</td>
            </tr>
            <tr>
                <th>Sports</th>
                <td>{{ user_show.sport1 }}</td>
                <td>{{ user_show.sport2 }}</td>
                <td>{{ user_show.sport3 }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user_show.city }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user_show.email }}</td>
            </tr>

        </tbody>
    </table>
<p>
    <a href="{{ path('backoffice_user_index') }}">retour à la liste des utilisateurs</a>
</p>
<p>
    <a href="{{ path('backoffice_user_edit', {id:user_show.id}) }}">modifier</a>
</p>
