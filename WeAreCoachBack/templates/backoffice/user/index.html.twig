{% extends 'backoffice/layout.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block content %}

<div class="example-wrapper">
    <h1>Hello ! ✅</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Pseudo</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td><img src="{{user.picture}}" width="300"></td>

                </tr>
            {% endfor %}
            <p>
            <a href="{{ path('backoffice_index') }}">Retour à l'accueil</a>
            </p>
            </tbody>
</div>
{% endblock %}
